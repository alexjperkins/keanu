### --- Keanu Alias File --- ###

### Aliases

### Docker
alias dc='docker-compose'


## Git
alias gs='git status'
alias gl='git log --graph --abbrev-commit --decorate'
alias gch='git checkout'
alias ga='git add'
alias gpl='git pull'
alias gpo='git push origin'
alias gc='git commit'


## Kubernetes
alias kc='kubectl'
alias mk='minikube'


### Keanu
alias todo='$EDITOR $TODOPATH'
alias learn='$EDITOR $TOLEARNPATH'
alias toread='$EDITOR $TOREADPATH'
alias wiki='cd $KEANU_WIKI && ls -a'
alias repos='cd $KEANU_REPOS && ls -a'
alias verv='cd $VERVPATH && ls -a'
alias goals='$EDITOR $KEANU_GOALS'
alias finances='$EDITOR $KEANU_FINANCES'
alias timetable='$EDITOR $KEANU_TIMETABLE'


### Python
alias pyinitd='find . -type d -exec touch {}/__init__.py \;'  # creates `__init__.py` in all dirs


## Shell Commands
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -la'


## Spotify
alias spt='./$HOME/keanu/spotify-tui/launch.sh'


### Suffix Aliases
alias -s pdf='zathura &!'
alias -s {md}=$EDITOR
alias -s py=python


### Vim / Neo$EDITOR
alias vi="vim"
alias v="vim"
alias nv="nvim"


### Zathura
alias zath='zathura'
